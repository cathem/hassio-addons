{
  "name": "music addon",
  "version": "1.1",
  "slug": "snapcastclient",
  "description": "Snapcast client for multiroom audio diffusion",
  "startup": "application",
  "boot": "auto",
  "image": "bestlibre/{arch}-snapcast-client",
  "audio": true,
  "options": {
    "music_directory": "/media/music",
    "port": 8080,
    "title": "我的音乐播放器"
  },
  "schema": {"music_directory": "str",
    "port": "int",
    "title": "str"},
  "ports": {},
  "devices": ["/dev/snd:/dev/snd:rwm"],
  "arch": ["armv7", "armhf", "amd64", "aarch64", "i386"],
  "map": ["media"],
}
